{
  "name": "backroom-blackjack",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared",
    "deploy"
  ],
  "scripts": {
    "dev": "yarn workspace cctfrontend dev:local",
    "build": "yarn workspace cctfrontend build",
    "lint": "yarn workspace cctfrontend lint",
    "tsc": "yarn workspace cctfrontend tsc --noEmit",
    "deploy": "yarn workspace @backroom-blackjack/deploy deploy",
    "deploy:dev": "yarn workspace @backroom-blackjack/deploy deploy:dev",
    "deploy:prod": "yarn workspace @backroom-blackjack/deploy deploy:prod",
    "delete-stack": "bash -c 'source ./deploy/utils/set-aws-env.sh && node deploy/utils/delete-stack.js backroom-blackjack-dev'",
    "delete-stack:wait": "bash -c 'source ./deploy/utils/set-aws-env.sh && node deploy/utils/delete-stack.js backroom-blackjack-dev --wait'",
    "cleanup-orphans": "bash -c 'source ./deploy/utils/set-aws-env.sh && cd deploy && tsx utils/orphan-cleanup.ts dev'",
    "cleanup-orphans:dry-run": "bash -c 'source ./deploy/utils/set-aws-env.sh && cd deploy && tsx utils/orphan-cleanup.ts dev --dry-run'",
    "clean-deploy": "yarn deploy:dev --action replace"
  },
  "devDependencies": {
    "sharp": "^0.34.5",
    "typescript": "^5.5.4"
  }
}
